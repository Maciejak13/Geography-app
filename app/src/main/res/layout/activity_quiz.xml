<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/tlo"
    android:layout_height="match_parent"
    tools:context=".Quiz.QuizActivity">

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:textAlignment="center"
        android:text="Pytanie testowePytanie testowePytanie testowe"
        android:textStyle="bold"
        android:textSize="24sp" />

    <Button
        android:id="@+id/option1Button"
        android:layout_width="230dp"
        android:layout_height="62dp"
        android:layout_below="@id/questionTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn1"
        android:textSize="20sp" />

    <Button
        android:id="@+id/option2Button"
        android:layout_width="230dp"
        android:textSize="20sp"
        android:layout_height="62dp"
        android:layout_below="@id/option1Button"
        android:layout_marginTop="16dp"

        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/btn2"
        />

    <Button
        android:id="@+id/option3Button"
        android:layout_width="230dp"
        android:layout_height="62dp"
        android:layout_below="@id/option2Button"
        android:layout_marginTop="16dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:textSize="20sp"
        android:background="@drawable/btn4"/>

    <TextView
        android:id="@+id/correctAnswerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/option3Button"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginTop="150dp"

        android:textSize="20sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/countdownTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/correctAnswerTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:text="00:15"
        android:textColor="#050505"
        android:textSize="30dp"
        android:textStyle="bold" />


</RelativeLayout>