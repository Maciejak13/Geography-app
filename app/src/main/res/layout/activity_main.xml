<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:background="@color/tlo"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Profil"
        android:layout_width="230dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="89dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="141dp"
        android:layout_weight="1"
        android:background="@drawable/btn5"
        android:text="profil"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:text="Aplikacja do nauki geografii"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold">

    </TextView>

    <Button
        android:id="@+id/quiz"
        android:layout_width="230dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="89dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="539dp"
        android:layout_weight="1"
        android:background="@drawable/btn1"
        android:text="Quizy"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/fiszki"
        android:layout_width="230dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="89dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="439dp"
        android:layout_weight="1"
        android:background="@drawable/btn2"
        android:text="Fiszki"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Stats"
        android:layout_width="230dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="250dp"
        android:layout_weight="1"
        android:background="@drawable/btn6"
        android:text="Historia gier"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnQuizDodaj"
        android:layout_width="230dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="348dp"
        android:layout_weight="1"
        android:background="@drawable/btn4"
        android:text="Ranking"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Wyjscie"
        android:layout_width="230dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="89dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="42dp"
        android:layout_weight="1"
        android:background="@drawable/btn3"
        android:text="wyloguj sie"
        android:textSize="20sp"
        android:textStyle="bold" />



</RelativeLayout>
